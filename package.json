{
  "name": "sql-ai-challenge",
  "version": "1.0.0",
  "description": "Natural Language to SQL application using NestJS, MCP, LangChain, and OpenAI",
  "main": "index.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:api": "tsc -p apps/api/tsconfig.json",
    "build:mcp": "tsc -p apps/mcp/tsconfig.json",
    "start": "node dist/apps/api/main.js",
    "start:dev": "ts-node-dev apps/api/main.ts",
    "start:mcp": "ts-node apps/mcp/nl2sql.server.ts",
    "seed:db": "node -e \"const Database=require('better-sqlite3');const fs=require('fs');const db=new Database(process.env.SQLITE_PATH||'./db/app.db');db.exec(fs.readFileSync('./db/schema.sql','utf8'));db.exec(fs.readFileSync('./db/seed.sql','utf8'));console.log('DB ready at',process.env.SQLITE_PATH||'./db/app.db')\"",
    "test": "jest",
    "test:e2e": "jest --config test/jest-e2e.json",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\""
  },
  "dependencies": {
    "@langchain/core": "^0.1.63",
    "@langchain/openai": "^0.0.14",
    "@modelcontextprotocol/sdk": "^1.0.2",
    "@nestjs/common": "^10.3.3",
    "@nestjs/core": "^10.3.3",
    "@nestjs/platform-express": "^10.3.3",
    "better-sqlite3": "^9.4.3",
    "dotenv": "^16.4.5",
    "langchain": "^0.1.25",
    "reflect-metadata": "^0.2.1",
    "rxjs": "^7.8.1",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.3.2",
    "@types/better-sqlite3": "^7.6.9",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.25",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "nestjs",
    "natural-language",
    "sql",
    "mcp",
    "langchain",
    "openai",
    "sqlite"
  ],
  "author": "",
  "license": "MIT"
}
