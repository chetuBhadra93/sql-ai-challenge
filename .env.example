# OpenAI
OPENAI_API_KEY=sk-***
OPENAI_MODEL=gpt-4o-mini

# PostgreSQL Database Configuration
# Note: For macOS users who already have a local Postgres listening on 5432,
# run the Dockerized Postgres on 5433 and point the app at that port.
# You can override this at runtime with: POSTGRES_PORT=5433 npm run <script>
POSTGRES_HOST=localhost
POSTGRES_PORT=5433
POSTGRES_DB=sql_ai_db
POSTGRES_USER=sql_ai_user
POSTGRES_PASSWORD=sql_ai_password

# API Configuration
API_PORT=3000

# Development Settings
NODE_ENV=development

# Safety: allow only SELECT by default
ALLOW_WRITE_SQL=false

# ReAct Agent Configuration
REACT_MODE_ENABLED=true
REACT_MAX_ITERATIONS=5
REACT_TIMEOUT_MS=30000
REACT_DEBUG_MODE=false